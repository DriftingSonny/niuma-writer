{
    "name": "niuma-writer",
    "displayName": "Niuma Writer",
    "description": "模拟打字效果的插件，逐个字符显示文本内容",
    "publisher": "shanbai",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.70.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:niuma-writer.toggle"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "niuma-writer.toggle",
                "title": "Niuma Writer: 切换打字模式"
            }
        ],
        "keybindings": [
            {
                "command": "niuma-writer.toggle",
                "key": "alt+w",
                "mac": "alt+w",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint . --ext .ts,.tsx",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.70.0",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^5.59.0",
        "@typescript-eslint/parser": "^5.59.0",
        "eslint": "^8.38.0",
        "typescript": "^5.0.4",
        "@vscode/test-electron": "^2.3.0"
    }
}
